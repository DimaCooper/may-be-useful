<Window x:Class="CalcTab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalcTab"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300"
		Closing="Window_Closing">
    <Grid>

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Button x:Name="Parties" Content="Select parties.xlsx..." Grid.Row="1" Width="200" Height="25" Margin="10" Click="Parties_Click"/>
		<Button x:Name="Nomenclatures" Content="Select nomenclatures.xlsx..." Grid.Row="2" Width="200" Height="25" Margin="10" Click="Nomenclatures_Click"/>
		<Button x:Name="MachineTools" Content="Select machine_tools.xlsx..." Grid.Row="3" Width="200" Height="25" Margin="10" Click="MachineTools_Click"/>
		<Button x:Name="Times" Content="Select times.xlsx..." Grid.Row="4" Width="200" Height="25" Margin="10" Click="Times_Click"/>

		<Button x:Name="Save" Content="Save" Grid.Row="5" Width="200" Height="25" Margin="10" Click="Save_Click"/>

	</Grid>
</Window>
